import numpy as np
import plotly.graph_objects as go

x = np.random.randn(1_000_000)
y = np.random.randn(1_000_000)
bins = 50

hist, xedges, yedges = np.histogram2d(x, y, bins=bins, density=True)

x, y = np.meshgrid(xedges[:-1], yedges[:-1], indexing="ij")
z = hist.T # transposition
X, Y = np.meshgrid(np.linspace(-4, 4, 50),
                   np.linspace(-4, 4, 50))
Z = (1 / (2 * np.pi)) * np.exp(-0.5 * (X**2 + Y**2)) # density of N((0,0), I)

fig = go.Figure()
fig.add_trace(go.Surface(
    x=x, y=y, z=z,
    colorscale="Blues",
    opacity=0.7,
    name="Data from 1mln samples"
))

fig.add_trace(go.Surface(
    x=X, y=Y, z=Z,
    colorscale="Reds",
    opacity=0.7,
    name="Real Density of N((0,0), I)"
))

fig.update_layout(
    title="1mln samples vs real density of N((0,0), I)",
    scene=dict(
        xaxis_title="X",
        yaxis_title="Y",
        zaxis_title="Density",
        aspectratio=dict(x=1, y=1, z=0.5)
    ),
    legend=dict(x=0.7, y=0.9)
)

fig.show()





