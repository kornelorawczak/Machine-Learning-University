    "acc" : len(data[data["class"] == "acc"]),
    "good" : len(data[data["class"] == "good"]),
    "v-good" : len(data[data["class"] == "vgood"]),
}

labels = counts.keys()
sizes = counts.values()

plt.pie(sizes, labels=labels, autopct="%1.1f%%", startangle=90)
plt.title("Car classes")
plt.axis("equal")  

plt.show()




