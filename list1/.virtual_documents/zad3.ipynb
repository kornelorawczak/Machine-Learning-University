_, ax = plt.subplots(figsize=(8,6), subplot_kw=dict(polar=True))
for class_id, row in means.iterrows():
    values = row.tolist()
    values += values[:1]  
    ax.plot(angles, values, label=class_id)
    ax.fill(angles, values, alpha=0.1)

print(means.iterrows)

ax.set_xticks(angles[:-1])
